/* pages/shopcar/shopcar.wxss */
page{
  background: #f5f5f5;
  height: 100%;
}
.zhanwei{
  width: 100%;
  height: 20rpx;
}
.zhanwei2{
  width: 100%;
  height: 98rpx;
}
.car_top{
  width:750rpx;
  height:90rpx;
  background:rgba(255,255,255,1);
  border-bottom: 1rpx solid #EEEEEE;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 26rpx;
  box-sizing: border-box;
}
.car_top_v1{
  display: flex;
  align-items: center;
}
.car_top_v1 image{
  width: 36rpx;
  height: 36rpx;
}
.car_top_v1 view{
  padding-left: 18rpx;
  font-size:24rpx;
  font-weight:bold;
  color:rgba(51,51,51,1);
}
.car_top_v2{
  font-size:26rpx;
  font-weight:bold;
  color:rgba(102,102,102,1);
}

.car_list{
  width: 100%;
  background: #fff;
  padding: 26rpx 30rpx;
  display: flex;
  align-items: stretch;
  box-sizing: border-box;
}
.car_list_v1{
  display: flex;
  align-items: center;
}
.car_list_v1 image{
  width: 36rpx;
  height: 36rpx;
}
.car_list_v2{
  padding:0 18rpx;
}
.car_list_v2 image{
  width: 160rpx;
  height: 160rpx;
}

.car_list_v3{
  flex: 1;
  width: 0;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  /* border-bottom: 1rpx solid #eee; */
}
.car_list_v3_1{
  width: 100%;
  overflow:hidden; 
  text-overflow:ellipsis;
  display:-webkit-box; 
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2; 
font-size:26rpx;
/* font-family:PingFang-SC-Medium; */
font-weight:500;
color:rgba(51,51,51,1);
}
.car_list_v3_2{
  font-size:22rpx;
/* font-family:PingFang-SC-Medium; */
font-weight:500;
color:rgba(194,194,194,1);
}
.car_list_v3_3{
  display: flex;
  width: 100%;
  align-items: center;
  justify-content: space-between;
}
.car_list_v3_3_left{
  font-size:26rpx;
/* font-family:PingFang-SC-Medium; */
font-weight:500;
color:rgba(238,51,54,1);
}
.car_bottom_zhanwe{
  width:750rpx;
  height:98rpx;
}
.car_bottom{
  width:750rpx;
height:98rpx;
background:rgba(255,255,255,1);
display: flex;
align-items: stretch;
position: fixed;
bottom: 0;
z-index: 3;
}
.car_bottom_left{
  flex: 1;
  display: flex;
  align-items: center;
  padding-left: 26rpx;
  width: 0;
}
.car_bottom_left_v1{
  font-size:24rpx;
font-family:PingFang-SC-Medium;
font-weight:bold;
color:rgba(51,51,51,1);
}
.car_bottom_left_v2{
  font-size:32rpx;
font-family:PingFang-SC-Medium;
font-weight:bold;
color:rgba(238,51,54,1);
}
.car_bottom_right{
  width:200rpx;
height:99rpx;
background:rgba(238,51,54,1);
display: flex;
align-items: center;
justify-content: center;
font-size:30rpx;
font-family:PingFang-SC-Medium;
font-weight:bold;
color:rgba(255,255,255,1);
}