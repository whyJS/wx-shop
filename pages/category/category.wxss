/* pages/category/category.wxss */
page{
  width: 100%;
  height: 100%;
}
.wrapper{
 width: 100%;
  height: 100%;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}
.head{
  width: 100%;
  box-sizing: border-box;
  padding: 11rpx 26rpx;
  border-bottom: 1rpx solid #ddd;
}

/*总体主盒子*/  
.container {  
  position: relative;  
  width: 100%;  
  height: 0;
  flex: 1;  
  background-color: #f0f4f7;  
  color: #939393;
  display: flex;
  align-items: stretch;
  box-sizing: border-box; 
  flex-direction: row; 
}  
.scroll_left{
  width: 169rpx;
  height: 100%;
  box-sizing: border-box;
  background: #F5F5F5;  
}
/*左侧栏主盒子*/  
.nav_left{  
  width: 100%;  
  /*主盒子设置背景色为灰色*/   
  text-align: center;  
}  
/*左侧栏list的item*/  
.nav_left .nav_left_items{  
  background: #f5f5f5; 
  height: 90rpx;   
  line-height: 90rpx;     
  border-bottom: 3px solid #f5f5f5;   
  font-size:26rpx;
font-family:PingFang-SC-Medium;
font-weight:500;
color:rgba(102,102,102,1);
  
}  
.nav_left .nav_left_items2_wrapper .nav_left_items2{
  background: #f5f5f5; 
  height: 90rpx;   
  /* line-height: 90rpx;      */
  border-bottom: 1px solid #f5f5f5;   
  font-size:24rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(102,102,102,1);
  display: flex;
  align-items: center;
  justify-content: flex-end;
  flex-direction: column;
  line-height: 24rpx;
}
.nav_left .nav_left_items2_wrapper .nav_left_items2 .nav_left_items2_2{
  width:37rpx;
  height:4rpx;
  background:#f5f5f5;
  border-radius:2rpx;
  margin-top: 17rpx;
  margin-bottom: 13rpx;
}
/*左侧栏list的item被选中时*/  
.nav_left .nav_left_items.active{  
  border-bottom: 3rpx solid #eee; 
   background: #fff;
   color: #333;
   /* font-weight: 900;    */
}  
.nav_left .nav_left_items2_wrapper.active .nav_left_items2{  
  border-bottom: 1rpx solid #eee; 
  background: #fff;
  color: #F1302E;   
}  
.nav_left .nav_left_items2_wrapper.active .nav_left_items2 .nav_left_items2_2{
  background:#fff;
}
.nav_left .nav_left_items2_wrapper.active .nav_left_items2.active .nav_left_items2_2{
  background:#F1302E;
}
  
/*右侧栏主盒子*/  
.scroll_right{  
  flex: 1;  
  width: 0;  
  height: 100%;   
  box-sizing: border-box;  
  background-color: #fff;
  border-left: 1rpx solid #eee;
} 
.nav_right{
  width: 100%;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  padding-left: 10rpx;
}
.nav_right image{
  width: 120rpx;
  height: 120rpx;
}
.nav_right .nav_right_wrapper{
  box-sizing: border-box;
  width: 0;
  flex: 1;
  padding:32rpx 26rpx 28rpx 10rpx;
  border-bottom: 1rpx solid #EEEEEE;
  
}
.nav_right .nav_right_wrapper_d1{
  font-size:26rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(51,51,51,1);
  overflow:hidden; 
  text-overflow:ellipsis;
  display:-webkit-box; 
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2; 
  line-height: 30rpx;
  min-height: 60rpx;
}

.nav_right .nav_right_wrapper_d2{
  font-size:22rpx;
  font-family:PingFang-SC-Regular;
  font-weight:400;
  color:rgba(153,153,153,1);
  line-height:22rpx;
  margin-top: 16rpx;
  margin-bottom: 23rpx;
}

.nav_right .nav_right_wrapper_d3{
  font-size:22rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(238,51,54,1);
  line-height:22rpx;
}


/*右侧栏list的item*/  
.nav_right_items{  
  width: 50%;  
  text-align: center; 
  color: #4a4a4a; 
  background: #fff;
  height: 180rpx;
  box-sizing: border-box;
}  
.nav_right_items image{  
  /*被图片设置宽高*/  
  width: 60px;  
  height: 50px; 
  margin-top: 15rpx; 
}  
.nav_right_items text{  
  /*给text设成块级元素*/  
  display: block;  
  margin-top: 5rpx;  
  margin-bottom: 10rpx;
  font-size: 26rpx;  
  /*设置文字溢出部分为...*/  
  overflow: hidden;  
  white-space: nowrap;  
  text-overflow: ellipsis;  
}
/** 自定义其他点击态样式类 **/
.other-navigator-hover{
  background:#fff;
}