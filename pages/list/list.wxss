/* pages/list/list.wxss */
page{
  height: 100%;
  background: #f5f5f5;
}
.head{
   position: fixed;
    background-color: #ffffff;
    height: 86rpx;
    width: 100%;
    z-index: 3;
    padding: 11rpx 26rpx;
    box-sizing: border-box;
}
.zhanwei{
  height: 106rpx;
  background: #f5f5f5;
}

.list{
  width: 750rpx;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  padding: 0rpx 30rpx;
  background: #fff;
}
.img{
  width: 120rpx;
  height: 120rpx;
}
.right{
  width: 0;
  flex: 1;
  /* height: 174rpx; */
  box-sizing: border-box;
  border-bottom: 1rpx solid #f5f5f5;
  padding: 27rpx 0rpx;
  padding-left: 20rpx;
  
}
.right_1{
  width: 100%;
  overflow:hidden; 
  text-overflow:ellipsis;
  display:-webkit-box; 
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2; 
  font-size:26rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(51,51,51,1);
  line-height: 30rpx;
  min-height: 60rpx;
}
.right_2{
  font-size:22rpx;
font-family:PingFang-SC-Regular;
font-weight:400;
color:rgba(153,153,153,1);
line-height:30rpx;
}
.right_3{
  display: flex;
  align-items: center;
  justify-content: space-between;
}
