/* pages/address-list/index.wxss */
page{
  width: 750rpx;
  background: #f5f5f5;
  height: 100%;
  background: #f5f5f5;
}
.zhanwei{
  width: 100%;
  height: 148rpx;
}
.addressList{
  width: 750rpx;
  box-sizing: border-box;
  padding: 0 26rpx;
  background: #fff;
  margin-bottom: 10rpx;
}
.addressListTop{
  width: 100%;
  border-bottom: 1rpx solid #eee;
}
.addressListTopTitle{
  font-size:30rpx;
  /* font-family:PingFang-SC-Medium; */
  font-weight:500;
  color:rgba(51,51,51,1);
  line-height:45rpx;
  padding-top: 10rpx;
}
.addressListTopUser{
  font-size:28rpx;
/* font-family:PingFang-SC-Medium; */
font-weight:500;
color:rgba(153,153,153,1);
padding-bottom: 10rpx;
}
.addressListTopUserPhone{
  display: inline-block;
  padding-left: 30rpx;
}


.addressListTopBottom{
  width: 100%;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  height: 81rpx;
}
.addressListTopBottomV1{
  width: 0;
  flex: 1;
