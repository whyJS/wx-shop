/* pages/order-list/index.wxss */

page {
  height: 100%;
  background: #f5f5f5;
}

.zhanwei {
  width: 100%;
  height: 88rpx;
}

.top_list {
  box-sizing: border-box;
  width: 750rpx;
  background: #fff;
  position: fixed;
  top: 0;
  height: 88rpx;
  border-bottom: 1rpx solid #eee;
  display: flex;
  align-items: stretch;
  justify-content: space-around;
  font-size: 28rpx;
  /* font-family: PingFang-SC-Medium; */
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  line-height: 88rpx;
}

.top_list view {
  box-sizing: border-box;
  border-bottom: 3rpx solid rgba(0, 0, 0, 0);
}

.top_list .active {
  border-bottom: 3rpx solid #f1302e;
  color: #f1302e;
}

/* 订单列表 */

.order_list {
  width: 750rpx;
  background: #fff;
  box-sizing: border-box;
  padding: 0 26rpx;
  margin-bottom: 10rpx;
}

.goodsItem {
  width: 100%;
  box-sizing: border-box;
  padding: 12rpx 0;
  display: flex;
  align-items: stretch;
  justify-content: space-between;
  border-bottom: 1rpx solid #f5f5f5;
}

.goodsItemImg {
  width: 180rpx;
  height: 180rpx;
}

.goodsItemRight {
  width: 0;
  flex: 1;
  box-sizing: border-box;
  padding-left: 25rpx;
  display: flex;
  justify-content: space-around;
  flex-direction: column;
}

.goodsItemRightName {
  font-size: 26rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(102, 102, 102, 1);
}

.goodsItemRightGuiGe {
  font-size: 24rpx;
  /* font-family:PingFang-SC-Medium; */
  font-weight: 500;
  color: rgba(194, 194, 194, 1);
  line-height: 26rpx;
}

.goodsItemRightNum {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.goodsItemRightNumMoney {
  font-size: 30rpx;
  /* font-family:PingFang-SC-Medium; */
  font-weight: 500;
  color: rgba(238, 51, 54, 1);
}

.goodsItemRightNumShuLiang {
  font-size: 28rpx;
  /* font-family:PingFang-SC-Medium; */
  font-weight: 500;
  color: rgba(102, 102, 102, 1);
}

/* 合计 */

.heji {
  width: 100%;
  box-sizing: border-box;
  padding: 28rpx 0rpx;
  border-bottom: 1rpx solid #eee;
  font-size: 24rpx;
  /* font-family:PingFang-SC-Bold; */
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
  line-height: 24rpx;
  text-align: right;
}

/* 合计 */

.anniu {
  width: 100%;
  box-sizing: border-box;
  padding: 14rpx 0rpx;
  /* border-bottom: 1rpx solid #eee; */
  font-size: 28rpx;
  /* font-family:PingFang-SC-Medium; */
  font-weight: 500;
  color: rgba(102, 102, 102, 1);
  text-align: right;
  line-height: 28rpx;
}

.anniu text {
  display: inline-block;
  padding: 13rpx 15rpx;
  border: 1rpx solid rgba(156, 156, 156, 1);
  border-radius: 27rpx;
  margin-left: 20rpx;
}

.anniu .t1 {
  border: 1rpx solid rgba(241, 48, 46, 1);
  color: #f1302e;
}

/* 没有更多了 */

.none {
  width: 100%;
  text-align: center;
  font-size: 24rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(153, 153, 153, 1);
  padding: 30rpx 0;
}
